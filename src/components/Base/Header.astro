---
import HeaderMotionWrapper from "@/components/Base/HeaderMotionWrapper";
import { IJTypography } from "@/components/ui/ichigojam";
import { ModeToggle } from "@/components/ui/mode-toggle";

const { pathname } = Astro.url;
const isTopPage = pathname === "/";
---

<HeaderMotionWrapper client:load isTopPage={isTopPage}>
  <nav class="flex items-center justify-start max-w-4xl w-full">
    <ul class="flex items-center gap-4">
      <li>
        <a href="/" class="text-lg font-bold">
          <IJTypography addCursor={isTopPage}>Home</IJTypography>
        </a>
      </li>
      <li>
        <a href="/blog" class="text-lg font-bold">
          <IJTypography addCursor={pathname.startsWith("/blog")}
            >Blog</IJTypography
          >
        </a>
      </li>
      <li class="w-auto">
        <a href="/contact" class="text-lg font-bold">
          <IJTypography addCursor={pathname.startsWith("/contact")}
            >Contact</IJTypography
          >
        </a>
      </li>
    </ul>
  </nav>
  <ModeToggle client:load />
</HeaderMotionWrapper>
